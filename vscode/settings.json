{
  /* ---------------------- UI SETTINGS ---------------------- */
  "editor.fontFamily": "'VictorMono Nerd Font', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "600",
  "editor.lineHeight": 24,
  "editor.letterSpacing": 0.2,
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.renderLineHighlight": "gutter",
  "editor.lineNumbers": "relative",
  "editor.renderWhitespace": "selection",
  "editor.matchBrackets": "near",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.indentation": false,
  "editor.guides.highlightActiveIndentation": false,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "solid",
  "editor.suggest.showStatusBar": true,
  "editor.inlineSuggest.enabled": true,
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "right",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.list.smoothScrolling": true,
  "workbench.iconTheme": "file-icons",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.colorCustomizations": {
    "editor.background": "#010409"
  },
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tree.indent": 20,
  "workbench.tips.enabled": false,
  "workbench.editor.untitled.hint": "hidden",
  "window.title": "${activeEditorShort}${separator}${rootPath}",
  "explorer.sortOrder": "type",
  "breadcrumbs.enabled": true,
  "search.showLineNumbers": true,

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "keyword.control",
          "keyword.operator.new",
          "keyword.operator.assignment",
          "keyword.operator.arithmetic",
          "storage.modifier",
          "storage.type",
          "support.class",
          "support.constant",
          "support.other",
          "entity.name.method",
          "entity.name.section",
          "entity.name.selector",
          "entity.name.type",
          "entity.other",
          "entity.other.attribute-name",
          "entity.other.inherited-class",
          "variable.other.property"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": ["storage.type.function.arrow", "meta.paragraph.markdown"],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },

  /* ---------------------- EXTENSIONS SETTINGS ---------------------- */
  "git.autofetch": true,
  "emmet.triggerExpansionOnTab": true,
  "tabnine.experimentalAutoImports": true,
  "fiveServer.port": 3000,
  "fiveServer.navigate": true,
  "fiveServer.browser": ["chrome"],
  "discord.removeRemoteRepository": true,
  "discord.removeLowerDetails": true,
  "discord.removeDetails": true,
  "github.copilot.enable": {
    "*": true
  },
  "markdown.extension.toc.updateOnSave": false,

  /* ---------------------- TERMINAL SETTINGS ---------------------- */
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.fontFamily": "'VictorMono Nerd Font', Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 14,

  /* ---------------------- LINT/FORMATTING SETTINGS ---------------------- */
  "css.lint.duplicateProperties": "ignore",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.acceptSuggestionOnEnter": "off",
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.autoGuessEncoding": true,

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
  },
  "[sass]": {
    "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
  },
  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  },

  /* ---------------------- OTHER SETTINGS ---------------------- */
  "editor.linkedEditing": true,
  "workbench.commandPalette.history": 0,
  "telemetry.telemetryLevel": "crash",
  "security.workspace.trust.untrustedFiles": "open"
}
